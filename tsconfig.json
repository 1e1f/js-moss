{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    // "declarationDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "removeComments": false,
    "lib": [
      "esnext",
      "dom"
    ],
    "preserveConstEnums": true,
    "noEmitOnError": false
  }
}
