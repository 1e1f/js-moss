{
  "include": ["src/**/*.ts", "src/branch/parser/compiled.js"],
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "esm",
    "sourceMap": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "removeComments": false,
    "lib": ["esnext", "dom"],
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
